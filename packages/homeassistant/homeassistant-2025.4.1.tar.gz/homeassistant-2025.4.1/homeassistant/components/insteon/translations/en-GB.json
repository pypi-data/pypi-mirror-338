        "add_default_links": {
            "description": "Adds the default links between the device and the Insteon Modem (IM).",
            "fields": {
                "entity_id": {
                    "name": "Entity"
                }
            },
            "name": "Add default links"
        },
        "delete_all_link": {
            "fields": {
                "group": {
                    "name": "Group"
                }
            },
            "name": "Delete All-Link"
        },
