<xsd:schema
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:zone_types="https://liblvls.sourceforge.net/xsd_pub/2022-10-14/zone_types/"
  xmlns:lev_types="https://liblvls.sourceforge.net/xsd_pub/2022-10-14/level_types/"
  targetNamespace="https://liblvls.sourceforge.net/xsd_pub/2022-10-14/zone_types/"
>

<!--############################################################################
//  Import level types namespace.
//###########################################################################-->

<xsd:import
  namespace="https://liblvls.sourceforge.net/xsd_pub/2022-10-14/level_types/"
  schemaLocation="https://liblvls.sourceforge.net/xsd_pub/2022-10-14/level_types.xsd"
/>

<!--############################################################################
//  define the simple elements
//###########################################################################-->

  <xsd:simpleType name="d_prob">
    <xsd:restriction base="xsd:double">
      <xsd:minInclusive value="0." />
      <xsd:maxInclusive value="1." />
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="possible_names">
    <xsd:restriction base="xsd:string">
      <xsd:pattern value="[a-zA-Z]{1,3}[0-9]{1,3}"/>
      <xsd:pattern value=".{1,}"/>
    </xsd:restriction>
  </xsd:simpleType>
 
  <xsd:simpleType name="level_attribute">
     <xsd:restriction base="xsd:string"/>
  </xsd:simpleType>


<!--############################################################################
//  define the complex types
//###########################################################################-->

  <xsd:complexType name="level_type">
    <xsd:sequence>
      <xsd:element
        name="properties"
        type="lev_types:level_properties_type"
      />
      <xsd:element
        name="probability"
        type="zone_types:d_prob"
      />
    </xsd:sequence>
    <xsd:attribute name="name"
      type="zone_types:level_attribute"
      use="optional"
    />
  </xsd:complexType>

  <xsd:complexType name="levels_type">
    <xsd:sequence>
      <xsd:element name="level" type="zone_types:level_type"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="species_type">
    <xsd:sequence>
      <xsd:element
        name="levels"
        type="zone_types:levels_type"
      />
    </xsd:sequence>
    <xsd:attribute name="name" type="zone_types:possible_names" use="required"/>
  </xsd:complexType>

  <xsd:complexType name="zone_type">
    <xsd:sequence>
      <xsd:element
        name="optional_properties"
        type="lev_types:optional_properties_type"
        minOccurs="0"
      />
      <xsd:element
        name="species"
        type="zone_types:species_type"
        minOccurs="0"
        maxOccurs="unbounded"
      />
    </xsd:sequence>
    <xsd:attribute name="label1" type="xsd:string" use="optional"/>
    <xsd:attribute name="label2" type="xsd:string" use="optional"/>
    <xsd:attribute name="label3" type="xsd:string" use="optional"/>
  </xsd:complexType>

  <xsd:complexType name="zone_data_type">
    <xsd:sequence>
      <xsd:element
        name="zone"
        type="zone_types:zone_type"
        minOccurs="0"
        maxOccurs="unbounded"
      />
    </xsd:sequence>
  </xsd:complexType>

</xsd:schema>
