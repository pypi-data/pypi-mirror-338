{
    "name": "noxy_combiner",
    "ip_name": "noxy_combiner",
    "parameters": {
        "INPUTS":null,
        "DATA_WIDTH":null
    },
    "interfaces": [
        {
            "interface_name": "data_in?",
            "multi": [0,1,2,3,4,5],
            "type": "noxybus",
            "side": "sink",
            "ports": {
                "valid": {
                    "name": "valid_in_bus_?",
                    "dir": "input"
                },
                "ready": {
                    "name": "ready_in_bus_?",
                    "dir": "output"
                }
                ,"data": {
                    "name": "data_in_bus_?",
                    "dir": "input",
                    "dynamic_width": "DATA_WIDTH"
                }
            }
        },
        {
            "interface_name": "data_out",
            "type": "noxybus",
            "side": "source",
            "ports": {
                "valid": {
                    "name": "valid_out_bus",
                    "dir": "output",
                    "dynamic_width": "INPUTS"
                },
                "ready": {
                    "name": "ready_out_bus",
                    "dir": "input",
                    "dynamic_width": "INPUTS"
                }
                ,"data": {
                    "name": "data_out_bus",
                    "dir": "output",
                    "dynamic_width": "/self._parameters['INPUTS']*self._parameters['DATA_WIDTH']"
                }
            }
        }
    ]
}