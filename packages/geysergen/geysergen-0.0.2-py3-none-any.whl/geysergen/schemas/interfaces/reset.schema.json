{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id" : "urn:interfaces:reset",
  "title": "Reset Schema",
  "description": "Validates reset interfaces",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "type": {
          "description": "The interface type",
          "type": "string",
          "const": "reset"
        },
        "ports": {
          "type": "object",
          "description": "Contains ports and their definitions",
          "patternProperties": {
            "^reset(_n)?$": {
              "$ref": "urn:help:w1"
            }
          },
          "properties": {
            "reset_req": {
              "$ref": "urn:help:w1"
            }
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "side": {
            "enum": [
              "sink",
              "end"
            ]
          }
        }
      },
      "then": {
        "properties": {
          "ports": {
            "type": "object",
            "description": "Contains ports and their definitions",
            "patternProperties": {
              "^reset(_n)?$": {
                "$ref": "urn:help:def_in"
              }
            },
            "properties": {
              "reset_req": {
                "$ref": "urn:help:def_in"
              }
            }
          },
          "multiconnect": {
            "description": "Behavior if multiple interfaces connected",
            "const": "false",
            "default": "false"
          }
        }
      },
      "else": {
        "properties": {
          "ports": {
            "type": "object",
            "description": "Contains ports and their definitions",
            "patternProperties": {
              "^reset(_n)?$": {
                "$ref": "urn:help:def_out"
              }
            },
            "properties": {
              "reset_req": {
                "$ref": "urn:help:def_out",
                "properties": {
                  "unconnected": {
                    "default": "tie_low",
                    "const": "tie_low"
                  }
                }
              }
            }
          },
          "multiconnect": {
            "description": "Behavior if multiple interfaces connected",
            "type": "string",
            "default": "shared"
          }
        }
      }
    }
  ]
}